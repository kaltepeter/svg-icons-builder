{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@angular-extensions/svg-icons-builder/*": [
        "/*"
      ],
      "svg-to-ts/*": ["node_modules/svg-to-ts/src/lib/*"]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "*/files/**/*",
    "node_modules",
    "**/*.spec.ts",
  ]
}
